{
  "name": "expo-use-storage-state",
  "version": "0.11.0",
  "description": "A React hook for syncing JSON state with AsyncStorage or SecureStore (mobile) and localStorage (web)",
  "funding": "https://github.com/mathieuprog/expo-use-storage-state?sponsor=1",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "dist/index.js",
  "exports": {
    ".": {
      "react-native": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "prepare": "npm run build",
    "test": "jest --watchAll"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ],
    "testEnvironment": "jsdom"
  },
  "author": "Mathieu Decaffmeyer",
  "license": "Apache-2.0",
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "*",
    "expo-secure-store": "*",
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-native": "^0.73.0",
    "jest": "~30.1.3",
    "jest-expo": "^53.0.9",
    "rollup": "^4.50.1",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "bugs": {
    "url": "https://github.com/mathieuprog/expo-use-storage-state/issues"
  },
  "homepage": "https://github.com/mathieuprog/expo-use-storage-state#readme"
}
